{
    "compilerOptions": {
      "target": "es2017",
      "lib": ["es2015","dom","esnext"],
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators":true,
      "emitDecoratorMetadata": true,
      "sourceMap": false,
      "removeComments": true,
      "declaration": false,
      "outDir": "dist"
    },
    "exclude": [
      "node_modules",
    ],
    "include": [
      "src/**/*",
      "schema-builder/**/*"
    ]
  }